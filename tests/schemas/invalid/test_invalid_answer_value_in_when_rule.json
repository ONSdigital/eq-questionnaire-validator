{
  "mime_type": "application/json/ons/eq",
  "language": "en",
  "schema_version": "0.0.2",
  "data_version": "0.0.3",
  "survey_id": "0",
  "title": "Test invalid answer value in when rule",
  "theme": "default",
  "description": "A questionnaire to check invalid answer values in when rules",
  "metadata": [
    {
      "name": "user_id",
      "type": "string"
    },
    {
      "name": "period_id",
      "type": "string"
    },
    {
      "name": "ru_name",
      "type": "string"
    }
  ],
  "questionnaire_flow": {
    "type": "Linear",
    "options": {
      "summary": {
        "collapsible": false
      }
    }
  },
  "sections": [
    {
      "id": "default-section",
      "groups": [
        {
          "blocks": [
            {
              "type": "Question",
              "id": "country-checkbox",
              "question": {
                "id": "country-checkbox-question",
                "title": "Have you visited any of the following countries?",
                "type": "General",
                "answers": [
                  {
                    "id": "country-checkbox-answer",
                    "label": "Label",
                    "mandatory": false,
                    "type": "Checkbox",
                    "options": [
                      {
                        "label": "Spain",
                        "value": "Spain"
                      },
                      {
                        "label": "Italy",
                        "value": "Italy"
                      },
                      {
                        "label": "Portugal",
                        "value": "Portugal"
                      },
                      {
                        "label": "Switzerland",
                        "value": "Switzerland"
                      }
                    ]
                  }
                ]
              },
              "routing_rules": [
                {
                  "block": "country-interstitial-one",
                  "when": {
                    "in": [
                      "France",
                      {
                        "source": "answers",
                        "identifier": "country-checkbox-answer"
                      }
                    ]
                  }
                },
                {
                  "block": "country-interstitial-any",
                  "when": {
                    "any-in": [
                      ["France", "Italy"],
                      {
                        "source": "answers",
                        "identifier": "country-checkbox-answer"
                      }
                    ]
                  }
                },
                {
                  "block": "country-interstitial-any",
                  "when": {
                    "any-in": [
                      ["France", "Austria"],
                      {
                        "source": "answers",
                        "identifier": "country-checkbox-answer"
                      }
                    ]
                  }
                },
                {
                  "block": "country-interstitial-one",
                  "when": {
                    "in": [
                      7,
                      {
                        "source": "answers",
                        "identifier": "country-checkbox-answer"
                      }
                    ]
                  }
                },
                {
                  "section": "End"
                }
              ]
            },
            {
              "id": "country-interstitial-any",
              "type": "Interstitial",
              "skip_conditions": {
                "when": {
                  "in": [
                    "France",
                    {
                      "source": "answers",
                      "identifier": "country-checkbox-answer"
                    }
                  ]
                }
              },
              "content_variants": [
                {
                  "content": {
                    "title": "This will be shown only if you chose Italy"
                  },
                  "when": {
                    "in": [
                      "Italy",
                      {
                        "source": "answers",
                        "identifier": "country-checkbox-answer"
                      }
                    ]
                  }
                },
                {
                  "content": {
                    "title": "This will be shown only if you donâ€™t chose Italy."
                  },
                  "when": {
                    "not": {
                      "in": [
                        "Italian",
                        {
                          "source": "answers",
                          "identifier": "country-checkbox-answer"
                        }
                      ]
                    }
                  }
                }
              ]
            },
            {
              "id": "country-interstitial-one",
              "type": "Interstitial",
              "content": {
                "title": "Condition: Contains One",
                "contents": [
                  {
                    "description": "This will never be routed to."
                  }
                ]
              }
            }
          ],
          "id": "checkboxes"
        }
      ]
    }
  ]
}
