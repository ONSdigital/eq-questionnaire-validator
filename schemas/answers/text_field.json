{
  "$schema": "http://json-schema.org/draft-04/schema",
  "answer": {
    "type": "object",
    "properties": {
      "id": {
        "$ref": "../common_definitions.json#/id"
      },
      "q_code": {
        "$ref": "../common_definitions.json#/q_code"
      },
      "label": {
        "type": "string"
      },
      "guidance": {
        "$ref": "../common_definitions.json#/guidance"
      },
      "description": {
        "$ref": "../string_interpolation/definitions.json#/string_with_placeholders"
      },
      "type": {
        "type": "string",
        "enum": [
          "TextField"
        ]
      },
      "mandatory": {
        "type": "boolean"
      },
      "validation": {
        "type": "object",
        "properties": {
          "messages": {
            "MANDATORY_TEXTFIELD": {
              "type": "string"
            }
          }
        }
      },
      "calculated": {
        "$ref": "definitions.json#/calculated"
      }
    },
    "additionalProperties": false,
    "required": [
      "id",
      "type",
      "label",
      "mandatory"
    ]
  }
}