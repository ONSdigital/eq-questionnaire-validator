{
  "$id": "file:///answers/text_field.json",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "answer": {
    "type": "object",
    "properties": {
      "id": { "$ref": "../common_definitions.json#/identifier" },
      "q_code": { "$ref": "../common_definitions.json#/q_code" },
      "label": { "type": "string" },
      "guidance": { "$ref": "definitions.json#/answer_guidance" },
      "description": {
        "$ref": "../string_interpolation/definitions.json#/string_with_placeholders"
      },
      "suggestions": {
        "type": "object",
        "properties": {
          "url": { "$ref": "../common_definitions.json#/non_empty_string" },
          "allow_multiple": { "type": "boolean" }
        },
        "required": ["url"]
      },
      "type": {
        "type": "string",
        "enum": ["TextField"]
      },
      "mandatory": { "type": "boolean" },
      "visible": { "type": "boolean" },
      "max_length": { "type": "integer" },
      "validation": {
        "type": "object",
        "properties": {
          "messages": {
            "MANDATORY_TEXTFIELD": {
              "$ref": "../common_definitions.json#/non_empty_string"
            }
          }
        }
      },
      "calculated": { "$ref": "definitions.json#/calculated" }
    },
    "additionalProperties": false,
    "required": ["id", "type", "label", "mandatory"]
  }
}
