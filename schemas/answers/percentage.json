{
  "$id": "answers/percentage.json",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "answer": {
    "type": "object",
    "properties": {
      "id": { "$ref": "../common_definitions.json#/identifier" },
      "q_code": { "$ref": "../common_definitions.json#/q_code" },
      "label": { "type": "string" },
      "guidance": { "$ref": "definitions.json#/answer_guidance" },
      "description": {
        "$ref": "../string_interpolation/definitions.json#/string_with_placeholders"
      },
      "type": {
        "type": "string",
        "enum": ["Percentage"]
      },
      "mandatory": { "type": "boolean" },
      "max_length": { "type": "integer" },
      "decimal_places": {
        "type": "integer",
        "description": "Number of decimal places allowed"
      },
      "default": {
        "type": "integer",
        "description": "Default value if no answer given"
      },
      "maximum": { "$ref": "definitions.json#/max_value" },
      "minimum": { "$ref": "definitions.json#/min_value" },
      "validation": {
        "type": "object",
        "properties": {
          "messages": {
            "MANDATORY_NUMBER": {
              "$ref": "../common_definitions.json#/non_empty_string"
            },
            "NUMBER_TOO_SMALL": {
              "$ref": "../common_definitions.json#/non_empty_string"
            },
            "NUMBER_TOO_LARGE": {
              "$ref": "../common_definitions.json#/non_empty_string"
            },
            "NUMBER_TOO_SMALL_EXCLUSIVE": {
              "$ref": "../common_definitions.json#/non_empty_string"
            },
            "NUMBER_TOO_LARGE_EXCLUSIVE": {
              "$ref": "../common_definitions.json#/non_empty_string"
            },
            "INVALID_NUMBER": {
              "$ref": "../common_definitions.json#/non_empty_string"
            },
            "INVALID_INTEGER": {
              "$ref": "../common_definitions.json#/non_empty_string"
            },
            "INVALID_DECIMAL": {
              "$ref": "../common_definitions.json#/non_empty_string"
            }
          }
        }
      },
      "calculated": { "$ref": "definitions.json#/calculated" }
    },
    "additionalProperties": false,
    "required": ["id", "type", "mandatory", "label"]
  }
}
