{
  "$id": "file:///answers/duration.json",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "answer": {
    "type": "object",
    "properties": {
      "id": { "$ref": "../common_definitions.json#/identifier" },
      "q_code": { "$ref": "../common_definitions.json#/q_code" },
      "label": { "$ref": "../common_definitions.json#/non_empty_string" },
      "guidance": { "$ref": "definitions.json#/answer_guidance" },
      "description": {
        "$ref": "../string_interpolation/definitions.json#/string_with_placeholders"
      },
      "type": {
        "type": "string",
        "enum": ["Duration"]
      },
      "mandatory": { "type": "boolean" },
      "units": {
        "type": "array",
        "minItems": 1,
        "items": {
          "type": "string",
          "enum": ["years", "months"]
        }
      },
      "validation": {
        "type": "object",
        "properties": {
          "messages": {
            "MANDATORY_DURATION": {
              "$ref": "../common_definitions.json#/non_empty_string"
            },
            "INVALID_DURATION": {
              "$ref": "../common_definitions.json#/non_empty_string"
            }
          }
        }
      }
    },
    "additionalProperties": false,
    "required": ["id", "type", "mandatory", "units"]
  }
}
