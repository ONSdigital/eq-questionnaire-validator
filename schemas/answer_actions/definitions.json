{
  "$id": "https://eq.ons.gov.uk/answer_actions/definitions.json",
  "$schema": "http://json-schema.org/draft-07/schema",
  "redirect_to_add_block": {
    "type": "object",
    "description": "An action that redirects to the add block",
    "properties": {
      "type": {
        "enum": ["RedirectToAddBlock"]
      }
    },
    "additionalProperties": false,
    "required": ["type"]
  },
  "remove_answers_for_list_item": {
    "type": "object",
    "description": "An action that redirects to the remove block",
    "properties": {
      "type": {
        "enum": ["RemoveAnswersForListItem"]
      }
    },
    "additionalProperties": false,
    "required": ["type"]
  },
  "redirect_to_add_or_edit_block": {
    "type": "object",
    "description": "An action that redirects to the add or edit block",
    "properties": {
      "type": {
        "enum": ["RedirectToAddOrEditBlock"]
      }
    },
    "additionalProperties": false,
    "required": ["type"]
  },
  "redirect_to_list_add_question": {
    "type": "object",
    "description": "An action that redirects to a list add question",
    "properties": {
      "type": {
        "enum": ["RedirectToListAddQuestion"]
      },
      "params": {
        "type": "object",
        "properties": {
          "block_id": {
            "$ref": "https://eq.ons.gov.uk/common_definitions.json#/non_empty_string"
          },
          "list_name": {
            "$ref": "https://eq.ons.gov.uk/common_definitions.json#/non_empty_string"
          }
        },
        "additionalProperties": false,
        "required": ["block_id", "list_name"]
      }
    },
    "additionalProperties": false,
    "required": ["type", "params"]
  }
}
