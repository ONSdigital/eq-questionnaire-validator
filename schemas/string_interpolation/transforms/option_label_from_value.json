{
  "$schema": "http://json-schema.org/draft-07/schema",
  "$id": "https://eq.ons.gov.uk/string_interpolation/transforms/option_label_from_value.json",
  "option_label_from_value": {
    "description": "Get the label of an answer option based on its value. Takes two arguments, the option value and the answer id",
    "type": "object",
    "properties": {
      "transform": {
        "type": "string",
        "enum": ["option_label_from_value"]
      },
      "arguments": {
        "type": "object",
        "properties": {
          "value": {
            "$ref": "https://eq.ons.gov.uk/string_interpolation/definitions.json#/placeholder_value_sources"
          },
          "answer_id": {
            "type": "string"
          }
        },
        "required": ["value", "answer_id"],
        "additionalProperties": false
      }
    },
    "additionalProperties": false,
    "required": ["transform", "arguments"]
  }
}
