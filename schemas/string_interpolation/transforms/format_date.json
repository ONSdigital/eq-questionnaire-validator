{
  "$id": "https://eq.ons.gov.uk/string_interpolation/transforms/format_date.json",
  "$schema": "http://json-schema.org/draft-07/schema",
  "format_date": {
    "type": "object",
    "properties": {
      "transform": {
        "type": "string",
        "enum": ["format_date"]
      },
      "arguments": {
        "type": "object",
        "properties": {
          "date_to_format": {
            "oneOf": [
              {
                "$ref": "https://eq.ons.gov.uk/string_interpolation/definitions.json#/value_sources"
              },
              {
                "$ref": "https://eq.ons.gov.uk/common_definitions.json#/date_value"
              }
            ]
          },
          "date_format": {
            "type": "string",
            "description": "See https://unicode.org/reports/tr35/tr35-dates.html#Date_Format_Patterns",
            "enum": ["EEEE d MMMM", "EEEE d MMMM yyyy", "d MMMM yyyy"]
          }
        },
        "additionalProperties": false,
        "required": ["date_to_format"]
      }
    },
    "additionalProperties": false,
    "required": ["transform", "arguments"]
  }
}
