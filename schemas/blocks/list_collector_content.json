{
  "$id": "/blocks/list_collector_content.json",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "summary": {
    "type": "object",
    "properties": {
      "item_title": {
        "$ref": "../string_interpolation/definitions.json#/string_with_placeholders"
      },
      "title": {
        "$ref": "../string_interpolation/definitions.json#/string_with_placeholders"
      }
    },
    "additionalProperties": false,
    "required": ["item_title", "title"]
  },
  "block": {
    "type": "object",
    "properties": {
      "id": {
        "$ref": "../common_definitions.json#/identifier"
      },
      "type": {
        "type": "string",
        "enum": ["ListCollectorContent"]
      },
      "content": {
        "$ref": "definitions.json#/content"
      },
      "content_variants": {
        "$ref": "definitions.json#/content_variants"
      },
      "page_title": {
        "$ref": "../common_definitions.json#/non_empty_string"
      },
      "for_list": {
        "$ref": "../common_definitions.json#/non_empty_string"
      },
      "routing_rules": {
        "$ref": "../common_definitions.json#/routing_rules"
      },
      "repeating_blocks": {
        "type": "array",
        "minItems": 1,
        "items": {
          "$ref": "list_repeating_block.json#/block"
        }
      },
      "summary": {
        "$ref": "list_collector_content.json#/summary"
      }
    },
    "additionalProperties": false,
    "if": {
      "not": {
        "required": ["content"]
      }
    },
    "then": {
      "required": [
        "id",
        "type",
        "for_list",
        "content_variants",
        "repeating_blocks"
      ]
    },
    "else": {
      "required": ["id", "type", "for_list", "content", "repeating_blocks"]
    }
  }
}
