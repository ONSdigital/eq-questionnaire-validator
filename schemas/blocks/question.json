{
  "$id": "https://eq.ons.gov.uk/blocks/question.json",
  "$schema": "http://json-schema.org/draft-07/schema",
  "block": {
    "type": "object",
    "properties": {
      "id": {
        "$ref": "https://eq.ons.gov.uk/common_definitions.json#/identifier"
      },
      "number": {
        "type": "string"
      },
      "type": {
        "type": "string",
        "enum": [
          "Question",
          "ListAddQuestion",
          "ListEditQuestion",
          "ListRemoveQuestion",
          "PrimaryPersonListAddOrEditQuestion"
        ]
      },
      "show_on_section_summary": {
        "type": "boolean"
      },
      "question": {
        "$ref": "https://eq.ons.gov.uk/questions/definitions.json#/question"
      },
      "question_variants": {
        "$ref": "https://eq.ons.gov.uk/blocks/definitions.json#/question_variants"
      },
      "list_summary": {
        "type": "object",
        "properties": {
          "for_list": {
            "type": "string"
          },
          "summary": {
            "type": "object",
            "properties": {
              "item_title": {
                "$ref": "https://eq.ons.gov.uk/string_interpolation/definitions.json#/string_with_placeholders"
              }
            },
            "additionalProperties": false,
            "required": ["item_title"]
          }
        }
      },
      "routing_rules": {
        "$ref": "https://eq.ons.gov.uk/common_definitions.json#/routing_rules"
      },
      "skip_conditions": {
        "$ref": "https://eq.ons.gov.uk/common_definitions.json#/skip_conditions"
      }
    },
    "additionalProperties": false,
    "required": ["id", "type"],
    "oneOf": [
      {
        "required": ["question"]
      },
      {
        "required": ["question_variants"]
      }
    ]
  }
}
