{
  "$id": "https://eq.ons.gov.uk/blocks/primary_person_list_collector.json",
  "$schema": "http://json-schema.org/draft-07/schema",
  "answer_reference": {
    "type": "object",
    "properties": {
      "id": {
        "$ref": "https://eq.ons.gov.uk/common_definitions.json#/identifier",
        "description": "The id of an answer to reference"
      },
      "value": {
        "type": ["string", "integer"],
        "description": "The value of the answer which should be matched"
      }
    },
    "required": ["id", "value"],
    "additionalProperties": false
  },
  "block": {
    "type": "object",
    "properties": {
      "id": {
        "$ref": "https://eq.ons.gov.uk/common_definitions.json#/identifier"
      },
      "type": {
        "type": "string",
        "enum": ["PrimaryPersonListCollector"]
      },
      "for_list": {
        "type": "string"
      },
      "add_or_edit_answer": {
        "$ref": "list_collector.json#/answer_reference"
      },
      "question": {
        "$ref": "https://eq.ons.gov.uk/questions/definitions.json#/question"
      },
      "routing_rules": {
        "$ref": "https://eq.ons.gov.uk/common_definitions.json#/routing_rules"
      },
      "question_variants": {
        "$ref": "definitions.json#/question_variants"
      },
      "add_or_edit_block": {
        "type": "object",
        "properties": {
          "id": {
            "$ref": "https://eq.ons.gov.uk/common_definitions.json#/identifier"
          },
          "type": {
            "type": "string",
            "enum": ["PrimaryPersonListAddOrEditQuestion"]
          },
          "question": {
            "$ref": "https://eq.ons.gov.uk/questions/definitions.json#/question"
          },
          "question_variants": {
            "$ref": "https://eq.ons.gov.uk/blocks/definitions.json#/question_variants"
          }
        },
        "additionalProperties": false,
        "required": ["id", "type"],
        "oneOf": [
          {
            "required": ["question"]
          },
          {
            "required": ["question_variants"]
          }
        ]
      }
    },
    "additionalProperties": false,
    "required": [
      "id",
      "type",
      "for_list",
      "add_or_edit_answer",
      "add_or_edit_block"
    ],
    "oneOf": [
      {
        "required": ["question"]
      },
      {
        "required": ["question_variants"]
      }
    ]
  }
}
