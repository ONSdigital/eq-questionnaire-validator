{
  "$schema": "http://json-schema.org/draft-04/schema",
  "id": {
    "type": "string",
    "description": "Used to identify groups, blocks, questions and answers.",
    "pattern": "^[a-z0-9][a-z0-9\\-]*[a-z0-9]$"
  },
  "q_code": {
    "type": "string",
    "description": "A question code used by downstream systems to identify answers.",
    "pattern": "^[0-9a-z]+$"
  },
  "definitions": {
    "description": "Allows customisation of question definition title and description.",
    "type": "array",
    "minItems": 1,
    "items": {
      "type": "object",
      "required": [
        "title",
        "content"
      ],
      "properties": {
        "title": {
          "type": "string"
        },
        "content": {
          "$ref": "common_definitions.json#/content"
      }
      },
      "additionalProperties": false
    }
  },
  "guidance": {
    "type": "object",
    "properties": {
      "show_guidance": {
        "type": "string",
        "description": "The text that is used for the 'Show guidance' link."
      },
      "hide_guidance": {
        "type": "string",
        "description": "The text that is used for the 'Hide guidance' link."
      },
      "content": {
        "$ref": "common_definitions.json#/content"
      }
    }
  },
  "content": {
    "description": "Allows customisation of guidance text.",
    "type": "array",
    "minItems": 1,
    "items": {
      "type": "object",
      "anyOf": [
        {
          "required": [
            "title"
          ]
        },
        {
          "required": [
            "description"
          ]
        },
        {
          "required": [
            "list"
          ]
        }
      ],
      "properties": {
        "title": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "list": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      },
      "additionalProperties": false
    }
  },
  "skip_conditions": {
    "description": "Allows an element to be skipped when a condition has been met. By adding more than one `when` element it will evaluate as an or rule.",
    "type": "array",
    "minItems": 1,
    "uniqueItems": true,
    "properties": {
      "when": {
        "$ref": "common_definitions.json#/when"
      }
    },
    "required": [
      "when"
    ]
  },
  "when": {
    "type": "array",
    "description": "Configure conditional rules. By adding more than one `condition` element it will evaluate as an and rule.",
    "items": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string"
        },
        "meta": {
          "type": "string",
          "description": "Metadata provided by the calling service. This will vary between surveys."
        },
        "type": {
          "enum": [
            "answer_count"
          ],
          "description": "Type of rule used for when condition."
        },
        "answer_ids": {
          "type": "array",
          "description": "List of ids of answers that will be evaluated."
        },
        "condition": {
          "enum": [
            "equals",
            "not equals",
            "contains",
            "not contains",
            "set",
            "not set",
            "greater than",
            "less than",
            "greater than or equal to",
            "less than or equal to"
          ]
        },
        "value": {
          "type": [
            "string",
            "boolean",
            "integer"
          ]
        },
        "comparison_id": {
            "type": "string",
            "description": "The id of an answer which should be compared to."
        },
        "date_comparison": {
          "type": "object",
          "properties": {
            "id": {
              "type": "string"
            },
            "meta": {
              "type": "string",
              "description": "Metadata provided by the calling service. This will vary between surveys."
            },
            "value": {
              "type": "string",
              "description": "Hard coded YYYY-MM-DD/YYYY-MM date or now to give current date",
              "pattern": "^(now|\\d{4}\\-(0?[1-9]|1[012])(|\\-(0?[1-9]|[12][0-9]|3[01])))$"
            },
            "offset_by": {
              "$ref": "common_definitions.json#/offset_by_yyyy_mm_dd"
            }
          },
          "additionalProperties": false,
          "oneOf": [
            {
              "required": [ "id" ]
            },
            {
              "required": [ "meta" ]
            },
            {
              "required": [ "value" ]
            }
          ]
        }
      },
      "additionalProperties": false,
      "required": [
        "condition"
      ],
      "oneOf": [
        {
          "required": [
            "id"
          ]
        },
        {
          "required": [
            "meta"
          ]
        },
        {
          "required": [
            "type"
          ]
        }
      ]
    },
    "minItems": 1
  },
  "messages": {
    "type": "object",
    "description": "These messages override the standard error messages.",
    "properties": {
      "MANDATORY_DROPDOWN": {
        "type": "string"
      },
      "MANDATORY_TEXTFIELD": {
        "type": "string"
      },
      "MANDATORY_NUMBER": {
        "type": "string"
      },
      "MANDATORY_TEXTAREA": {
        "type": "string"
      },
      "MANDATORY_RADIO": {
        "type": "string"
      },
      "MANDATORY_CHECKBOX": {
        "type": "string"
      },
      "MANDATORY_DATE": {
        "type": "string"
      },
      "MANDATORY_DURATION": {
        "type": "string"
      },
      "NUMBER_TOO_SMALL": {
        "type": "string"
      },
      "NUMBER_TOO_LARGE": {
        "type": "string"
      },
      "NUMBER_TOO_SMALL_EXCLUSIVE": {
        "type": "string"
      },
      "NUMBER_TOO_LARGE_EXCLUSIVE": {
        "type": "string"
      },
      "INVALID_NUMBER": {
        "type": "string"
      },
      "INVALID_INTEGER": {
        "type": "string"
      },
      "INVALID_DECIMAL": {
        "type": "string"
      },
      "MAX_LENGTH_EXCEEDED": {
        "type": "string"
      },
      "INVALID_DATE": {
        "type": "string"
      },
      "INVALID_DATE_RANGE": {
        "type": "string"
      },
      "INVALID_DURATION": {
        "type": "string"
      }
    },
    "additionalProperties": false
  },
  "offset_by_yyyy_mm_dd": {
    "type": "object",
    "properties": {
      "days": {
        "type": "integer"
      },
      "months": {
        "type": "integer"
      },
      "years": {
        "type": "integer"
      }
    },
    "additionalProperties": false,
    "anyOf": [
        {
          "required": [ "days" ]
        },
        {
          "required": [ "months" ]
        },
        {
          "required": [ "years" ]
        }
      ]
  },
  "offset_by_yyyy_mm": {
    "type": "object",
    "properties": {
      "months": {
        "type": "integer"
      },
      "years": {
        "type": "integer"
      }
    },
    "additionalProperties": false,
    "anyOf": [
        {
          "required": [ "months" ]
        },
        {
          "required": [ "years" ]
        }
      ]
  },
  "offset_by_yyyy": {
    "type": "object",
    "properties": {
      "years": {
        "type": "integer"
      }
    },
    "additionalProperties": false,
    "required": [ "years" ]
  },
  "routing_rules": {
    "type": "array",
    "description": "Used to direct the journey through a survey (in conjunction with navigation).",
    "items": {
      "type": "object",
      "properties": {
        "goto": {
          "type": "object",
          "properties": {
            "block": {
              "type": "string",
              "description": "The id of another block in the same group."
            },
            "group": {
              "type": "string",
              "description": "The id of another group. The first block in that group will be routed to."
            },
            "when": {
              "$ref": "common_definitions.json#/when"
            }
          },
          "oneOf": [
            {
              "required": [
                "block"
              ]
            },
            {
              "required": [
                "group"
              ]
            }
          ],
          "additionalProperties": false
        },
        "repeat": {
          "oneOf": [
              {
                "type": "object",
                "properties": {
                  "type": {
                    "enum": [
                      "until"
                    ]
                  },
                  "when": {
                    "$ref": "common_definitions.json#/when"
                  }
                },
                "required": [
                  "type",
                  "when"
                ],
                "additionalProperties": false
              },
              {
                "type": "object",
                "properties": {
                  "type": {
                    "enum": [
                      "answer_value"
                    ]
                  },
                  "answer_id": {
                    "type": "string"
                  }
                },
                "required": [
                  "type",
                  "answer_id"
                ],
                "additionalProperties": false
              },
              {
                "type": "object",
                "properties": {
                  "type": {
                    "enum": [
                      "answer_count",
                      "answer_count_minus_one"
                    ]
                  },
                  "offset": {
                    "type": "integer"
                  },
                  "answer_id": {
                    "type": "string"
                  },
                  "answer_ids": {
                    "type": "array",
                    "items": {
                      "type": "string"
                    },
                    "minItems": 1,
                    "uniqueItems": true
                  }
                },
                "oneOf": [
                  {
                    "required": [
                      "type",
                      "answer_id"
                    ]
                  },
                  {
                    "required": [
                      "type",
                      "answer_ids"
                    ]
                  }
                ]
                ,
                "additionalProperties": false
              }
          ]
        }
      },
      "additionalProperties": false,
      "oneOf": [
        {
          "required": [
            "goto"
          ]
        },
        {
          "required": [
            "repeat"
          ]
        }
      ]
    }
  },
  "titles": {
    "type": "array",
    "description": "Used to allow a title contents to be set based on conditional values",
    "items": {
      "value": "string",
      "when": {
        "$ref": "common_definitions.json#/when"
      },
      "required": [
        "value"
      ]
    }
  }
}

