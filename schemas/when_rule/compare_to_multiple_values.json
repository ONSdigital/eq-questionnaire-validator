{
  "$id": "file:///when_rule/compare_to_multiple_values.json",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "description": "Comparison against multiple values",
  "properties": {
    "id": { "$ref": "definitions.json#/answer_identifier" },
    "meta": { "$ref": "../common_definitions.json#/metadata_identifier" },
    "condition": {
      "enum": ["contains all", "contains any", "equals any", "not equals any"]
    },
    "values": { "$ref": "definitions.json#/comparison_values" },
    "comparison": { "$ref": "definitions.json#/answer_comparison_object" }
  },
  "required": ["condition"],
  "allOf": [
    {
      "oneOf": [
        {
          "required": ["id"]
        },
        {
          "required": ["meta"]
        }
      ]
    },
    {
      "oneOf": [
        {
          "required": ["values"]
        },
        {
          "required": ["comparison"]
        }
      ]
    }
  ],
  "additionalProperties": false
}
