{
  "$id": "https://eq.ons.gov.uk/questionnaire_flow/hub.json",
  "$schema": "http://json-schema.org/draft-07/schema",
  "hub": {
    "type": "object",
    "properties": {
      "type": {
        "type": "string",
        "const": "Hub"
      },
      "options": {
        "$ref": "https://eq.ons.gov.uk/questionnaire_flow/hub.json#/options"
      }
    },
    "required": ["type", "options"],
    "additionalProperties": false,
    "minProperties": 1
  },
  "options": {
    "type": "object",
    "properties": {
      "required_completed_sections": {
        "description": "The sections that need to be complete prior to the hub displaying",
        "type": "array",
        "items": {
          "$ref": "https://eq.ons.gov.uk/common_definitions.json#/non_empty_string"
        },
        "minItems": 1
      }
    },
    "additionalProperties": false
  }
}
