{
  "$id": "/questions/types/general.json",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "question": {
    "type": "object",
    "properties": {
      "id": {
        "$ref": "../../common_definitions.json#/identifier"
      },
      "title": {
        "$ref": "../../string_interpolation/definitions.json#/string_with_placeholders"
      },
      "number": {
        "$ref": "../../common_definitions.json#/non_empty_string"
      },
      "description": {
        "$ref": "../../common_definitions.json#/string_array_with_placeholders"
      },
      "instruction": {
        "$ref": "../../common_definitions.json#/string_array_with_placeholders"
      },
      "warning": {
        "$ref": "../../common_definitions.json#/non_empty_string"
      },
      "definitions": {
        "$ref": "../../common_definitions.json#/question_definitions"
      },
      "definition": {
        "$ref": "../../common_definitions.json#/question_definition"
      },
      "guidance": {
        "$ref": "../../common_definitions.json#/guidance"
      },
      "summary": {
        "$ref": "../../questions/definitions.json#/summary"
      },
      "type": {
        "type": "string",
        "const": "General"
      },
      "dynamic_answers": {
        "type": "object",
        "properties": {
          "values": {
            "$ref": "../../value_sources.json#/list_value_source"
          },
          "answers": {
            "type": "array",
            "minItems": 1,
            "items": {
              "allOf": [
                  {
                    "if": { "properties": { "type": { "const": "Currency" } } },
                    "then": { "$ref": "../../answers/currency.json#/answer" }
                  },
                  {
                    "if": { "properties": { "type": { "const": "Date" } } },
                    "then": { "$ref": "../../answers/date.json#/answer" }
                  },
                  {
                    "if": { "properties": { "type": { "const": "MonthYearDate" } } },
                    "then": { "$ref": "../../answers/month_year_date.json#/answer" }
                  },
                  {
                    "if": { "properties": { "type": { "const": "YearDate" } } },
                    "then": { "$ref": "../../answers/year_date.json#/answer" }
                  },
                  {
                    "if": { "properties": { "type": { "const": "Duration" } } },
                    "then": { "$ref": "../../answers/duration.json#/answer" }
                  },
                  {
                    "if": { "properties": { "type": { "const": "Number" } } },
                    "then": { "$ref": "../../answers/number.json#/answer" }
                  },
                  {
                    "if": { "properties": { "type": { "const": "Percentage" } } },
                    "then": { "$ref": "../../answers/percentage.json#/answer" }
                  },
                  {
                    "if": { "properties": { "type": { "const": "TextArea" } } },
                    "then": { "$ref": "../../answers/text_area.json#/answer" }
                  },
                  {
                    "if": { "properties": { "type": { "const": "TextField" } } },
                    "then": { "$ref": "../../answers/text_field.json#/answer" }
                  },
                  {
                    "if": { "properties": { "type": { "const": "Unit" } } },
                    "then": { "$ref": "../../answers/unit.json#/answer" }
                  },
                  {
                    "if": { "properties": { "type": { "const": "MobileNumber" } } },
                    "then": { "$ref": "../../answers/mobile_number.json#/answer" }
                  }
                ]
            }
          }
        },
        "additionalProperties": false,
        "required": ["answers", "values"]
      },
      "answers": {
        "type": "array",
        "minItems": 1,
        "items": {
          "allOf": [
              {
                "if": { "properties": { "type": { "const": "Currency" } } },
                "then": { "$ref": "../../answers/currency.json#/answer" }
              },
              {
                "if": { "properties": { "type": { "const": "Date" } } },
                "then": { "$ref": "../../answers/date.json#/answer" }
              },
              {
                "if": { "properties": { "type": { "const": "MonthYearDate" } } },
                "then": { "$ref": "../../answers/month_year_date.json#/answer" }
              },
              {
                "if": { "properties": { "type": { "const": "YearDate" } } },
                "then": { "$ref": "../../answers/year_date.json#/answer" }
              },
              {
                "if": { "properties": { "type": { "const": "Duration" } } },
                "then": { "$ref": "../../answers/duration.json#/answer" }
              },
              {
                "if": { "properties": { "type": { "const": "Number" } } },
                "then": { "$ref": "../../answers/number.json#/answer" }
              },
              {
                "if": { "properties": { "type": { "const": "Percentage" } } },
                "then": { "$ref": "../../answers/percentage.json#/answer" }
              },
              {
                "if": { "properties": { "type": { "const": "TextArea" } } },
                "then": { "$ref": "../../answers/text_area.json#/answer" }
              },
              {
                "if": { "properties": { "type": { "const": "TextField" } } },
                "then": { "$ref": "../../answers/text_field.json#/answer" }
              },
              {
                "if": { "properties": { "type": { "const": "Unit" } } },
                "then": { "$ref": "../../answers/unit.json#/answer" }
              },
              {
                "if": { "properties": { "type": { "const": "MobileNumber" } } },
                "then": { "$ref": "../../answers/mobile_number.json#/answer" }
              }
            ]
        }
      }
    },
    "if": {
      "not": {
        "required": ["dynamic_answers"]
      }
    },
    "then": {
      "required": ["id", "type", "title", "answers"]
    },
    "else": {
      "required": ["id", "type", "title"]
    },
    "additionalProperties": false
  }
}
