{
  "$schema": "http://json-schema.org/draft-07/schema",
  "$id": "https://eq.ons.gov.uk/rules/operators/numeric/sum.json",
  "description": "Returns the sum of items in an array. Accepts an array of answer value sources",
  "type": "object",
  "sum_answer_values": {
    "properties": {
      "+": {
        "type": "array",
        "minItems": 2,
        "items": [
          {
            "$ref": "https://eq.ons.gov.uk/value_sources.json#/answer_value_source"
          }
        ]
      }
    },
    "additionalProperties": false
  }
}
