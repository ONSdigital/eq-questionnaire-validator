{
  "$schema": "http://json-schema.org/draft-07/schema",
  "$id": "https://eq.ons.gov.uk/rules/operators/value/sum.json",
  "description": "Returns the sum of items in an array. Accepts a single argument which is the array",
  "type": "object",
  "properties": {
    "+": {
      "type": "array",
      "minItems": 1,
      "maxItems": 1,
      "items": [
        {
          "$ref": "https://eq.ons.gov.uk/rules/definitions.json#/array_value"
        }
      ]
    }
  },
  "required": ["+"],
  "additionalProperties": false
}
