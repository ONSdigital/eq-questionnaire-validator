{
  "$schema": "http://json-schema.org/draft-07/schema",
  "$id": "https://eq.ons.gov.uk/rules/operators/value/date.json",
  "description": "Casts a value to a date. First argument is a date, second is an optional offset",
  "type": "object",
  "properties": {
    "date": {
      "type": "array",
      "minItems": 1,
      "maxItems": 2,
      "items": [
        {
          "oneOf": [
            {
              "description": "A date value in the format YYYY-MM-DD or `now`",
              "type": "string",
              "pattern": "^(\\d{4}-\\d{2}-\\d{2}|\\d{4}-\\d{2}|\\d{4}|now)$"
            },
            {
              "$ref": "https://eq.ons.gov.uk/value_sources.json#/any_value_source"
            }
          ]
        },
        {
          "type": "object",
          "properties": {
            "days": {
              "type": "integer"
            },
            "months": {
              "type": "integer"
            },
            "years": {
              "type": "integer"
            }
          },
          "additionalProperties": false,
          "anyOf": [
            {
              "required": ["days"]
            },
            {
              "required": ["months"]
            },
            {
              "required": ["years"]
            }
          ]
        }
      ]
    }
  },
  "required": ["date"],
  "additionalProperties": false
}
