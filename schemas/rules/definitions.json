{
  "$id": "https://eq.ons.gov.uk/rules/definitions.json",
  "$schema": "http://json-schema.org/draft-07/schema",
  "boolean_operators": {
    "description": "All operators that resolve to a boolean",
    "oneOf": [
      { "$ref": "https://eq.ons.gov.uk/rules/operators/comparison/equal.json" },
      {
        "$ref": "https://eq.ons.gov.uk/rules/operators/comparison/not-equal.json"
      },
      {
        "$ref": "https://eq.ons.gov.uk/rules/operators/comparison/less-than.json"
      },
      {
        "$ref": "https://eq.ons.gov.uk/rules/operators/comparison/less-than-or-equal.json"
      },
      {
        "$ref": "https://eq.ons.gov.uk/rules/operators/comparison/greater-than.json"
      },
      {
        "$ref": "https://eq.ons.gov.uk/rules/operators/comparison/greater-than-or-equal.json"
      },
      { "$ref": "https://eq.ons.gov.uk/rules/operators/comparison/in.json" },
      {
        "$ref": "https://eq.ons.gov.uk/rules/operators/comparison/any-in.json"
      },
      {
        "$ref": "https://eq.ons.gov.uk/rules/operators/comparison/all-in.json"
      },
      { "$ref": "https://eq.ons.gov.uk/rules/operators/boolean/and.json" },
      { "$ref": "https://eq.ons.gov.uk/rules/operators/boolean/or.json" },
      { "$ref": "https://eq.ons.gov.uk/rules/operators/boolean/not.json" }
    ]
  },
  "value_operators": {
    "description": "All operators that resolve to a value",
    "oneOf": [
      { "$ref": "https://eq.ons.gov.uk/rules/operators/value/date-offset.json" }
    ]
  },
  "any_value": {
    "description": "Any value",
    "oneOf": [
      { "type": ["number", "string", "array", "null"] },
      {
        "$ref": "https://eq.ons.gov.uk/value_sources.json#/answer_value_source"
      },
      {
        "$ref": "https://eq.ons.gov.uk/value_sources.json#/metadata_value_source"
      },
      {
        "$ref": "https://eq.ons.gov.uk/value_sources.json#/list_value_source"
      },
      {
        "$ref": "https://eq.ons.gov.uk/value_sources.json#/location_value_source"
      },
      {
        "$ref": "https://eq.ons.gov.uk/value_sources.json#/date_value_source"
      }
    ]
  },
  "string_value": {
    "description": "Any string value",
    "oneOf": [
      { "type": "string" },
      {
        "$ref": "https://eq.ons.gov.uk/value_sources.json#/answer_value_source"
      }
    ]
  },
  "number_value": {
    "description": "Any number value",
    "oneOf": [
      { "type": "number" },
      {
        "$ref": "https://eq.ons.gov.uk/value_sources.json#/answer_value_source"
      }
    ]
  },
  "array_value": {
    "description": "Any array value",
    "oneOf": [
      { "type": "array" },
      {
        "$ref": "https://eq.ons.gov.uk/value_sources.json#/answer_value_source"
      }
    ]
  },
  "date_value": {
    "description": "Any date value",
    "oneOf": [
      {
        "$ref": "https://eq.ons.gov.uk/value_sources.json#/date_value_source"
      },
      {
        "$ref": "https://eq.ons.gov.uk/value_sources.json#/answer_value_source"
      }
    ]
  }
}
